{
  "manifest_version": 3,
  "name": "SliceMark",
  "version": "1.0",
  "description": "A visual bookmark/textmark manager with tree layout",
  "permissions": ["storage", "tabs", "sidePanel", "clipboardRead", "clipboardWrite", "contextMenus"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "SliceMark"
  },
  "side_panel": {
    "default_path": "src/sidebar.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}