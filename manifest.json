{
  "manifest_version": 3,
  "name": "SliceMark",
  "version": "1.0.0",
  "description": "Flexible and agile bookmark manager with tagging and segmentation",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
